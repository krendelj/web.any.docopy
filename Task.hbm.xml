<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2"
    namespace="web.any.docopy.Domain" assembly="web.any.docopy"
    default-lazy="false"> <!-- Running NHibernate in Medium Trust -->

  <class name="web.any.docopy.Domain.Task"
         table="Tasks">

    <id name="Id"
        column="Id"
        type="int">
      <generator class="native" />
    </id>

    <many-to-one name="Category"
                 column="CategoryId"
                 class="web.any.docopy.Domain.Category"
                 not-null="true" />

    <set name="Subtasks"
     inverse="true"
     cascade="all-delete-orphan">

      <key column="TaskId" />
      <one-to-many class="web.any.docopy.Domain.Subtask" />
    </set>

    <set name="Attachments"
         inverse="true"
         cascade="all-delete-orphan">

      <key column="TaskId" />
      <one-to-many class="web.any.docopy.Domain.Attachment" />
    </set>

    <property name="Name"
              column="Name"
              type="string" />

    <property name="DateTime"
              column="DateTime"
              type="DateTime"
              not-null="false" />

    <property name="Completed"
              column="Completed"
              type="boolean" />

    <property name="Priority"
              column="Priority"
              type="boolean" />

    <property name="Notes"
              column="Notes"
              type="string" />
    
  </class>
  
</hibernate-mapping>